<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Register">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="170dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Registration Form"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_buttons"
        android:onClick="onClick"
        android:text="Finished"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="384dp"
        android:layout_height="520dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/introText"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64px"
                android:layout_marginTop="16dp"
                android:text="Please take a moment to fill out all fields of the registration form in order to set up your account." />

            <EditText
                android:id="@+id/nameText"
                android:layout_width="318dp"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="64px"
                android:layout_marginTop="32dp"
                android:background="@drawable/textentry"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="16dp"
                android:textAlignment="viewStart" />

            <EditText
                android:id="@+id/ageText"
                android:layout_width="318dp"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="64px"
                android:layout_marginTop="32dp"
                android:background="@drawable/textentry"
                android:ems="10"
                android:hint="Age"
                android:inputType="textPersonName"
                android:paddingLeft="16dp"
                android:textAlignment="viewStart" />

            <Spinner
                android:id="@+id/gender"
                android:layout_width="318dp"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="66dp"
                tools:layout_editor_absoluteY="470dp"></Spinner>

            <EditText
                android:id="@+id/emailText"
                android:layout_width="318dp"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="64px"
                android:layout_marginTop="32dp"
                android:background="@drawable/textentry"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textPersonName"
                android:paddingLeft="16dp"
                android:textAlignment="viewStart" />

            <Spinner
                android:id="@+id/user"
                android:layout_width="318dp"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="66dp"
                tools:layout_editor_absoluteY="470dp"/>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>